<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Parts_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#092032"
        android:id="@+id/header"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/processback"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constitution Of India"
            android:textSize="25sp"
            android:fontFamily="@font/futurabold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Parts_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/smallDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuramediumcondensedbt"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"/>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loaer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loaer"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/noDataImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nodata"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>




</LinearLayout>

