<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.Information_PartsActivity">



    <!-- Header LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#092032"
        android:id="@+id/header"
        android:orientation="horizontal">
        <!-- ImageView for back button -->
        <ImageView
            android:id="@+id/processback"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
        <!-- TextView for header title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitution Of India"
            android:textSize="25sp"
            android:fontFamily="@font/futurabold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="60dp">

        <ImageView
            android:id="@+id/noDataImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nodata"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>



    <!-- TextView for small description -->
    <TextView
        android:id="@+id/smallDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuramediumcondensedbt"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"/>


    <!-- RecyclerView with wrap_content height -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/article_recy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <!-- GifImageView for loader -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loaer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loaer"/>



</LinearLayout>
