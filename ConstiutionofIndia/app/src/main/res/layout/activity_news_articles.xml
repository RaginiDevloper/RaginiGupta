<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.News_ArticlesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#092032"
        android:id="@+id/header"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/processback"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitution Of India"
            android:textSize="25sp"
            android:fontFamily="@font/futurabold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/scheduleimage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="NEWS ARTICLES"
            android:textSize="30sp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/futuraboldfont" />

        <ImageView
            android:layout_width="410dp"
            android:layout_height="20dp"
            android:src="@drawable/linesperate"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loaer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loaer"/>






</LinearLayout>