<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.About_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#092032"
        android:id="@+id/header"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/processback"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitution Of India"
            android:textSize="25dp"
            android:fontFamily="@font/poppinsextrabold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txtcof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constitution of India"
        android:layout_marginHorizontal="50dp"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsbold"/>

    <TextView
        android:id="@+id/txtmysself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Ragini Gupta"
        android:layout_marginHorizontal="100dp"
        android:textSize="22dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/blue_dark"
        android:fontFamily="@font/poppinsbold"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empowering knowledge on India's Constitution:
                Your go-to app for a comprehensive understanding of our rights, laws, and celebrate our constitutional heritage. Together, let's uphold justice, equaity,and freedom. "
        android:layout_marginHorizontal="15dp"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:fontFamily="@font/dmsansbold"/>



</LinearLayout>

</ScrollView>