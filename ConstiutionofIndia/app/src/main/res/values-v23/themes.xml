      <item name="android:textColor">#000

      </item>

    </style>

    <style name="BUTTON">

        <item name="android:background">@color/blue_dark
        </item>
        <item name="android:textColor">@color/white</item>

    </style>

    <!-- Light Mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light mode attributes here -->
    </style>

    <!-- Dark Mode -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your dark mode attributes here -->
    </style>


