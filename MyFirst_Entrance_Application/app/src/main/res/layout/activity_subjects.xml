<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8CCE8"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/Drawerlayout"
    tools:context=".Subjects_Activity">

    <include layout="@layout/app_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/headerlay"
        app:menu="@menu/navigationsitems"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/top_blackground"
        android:layout_marginTop="80dp">

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/circles">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bookstree"
                android:scaleType="centerCrop"
                android:padding="0dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12TH STD QUESTION PAPERS"
            android:layout_marginTop="25dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"/>



            <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            app:cardBackgroundColor="#F4E0A4"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="0dp"
                    android:background="#DDB230"
                    android:layout_marginHorizontal="10dp"
                    app:cardElevation="21dp">

                    <ImageView
                        android:id="@+id/jee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#D5AD30"
                        android:src="@drawable/imgjee_2"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JEE Mains"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Original question papeers and answers"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#E8A1A1"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="5dp"
                    android:background="#E1837C"
                    android:layout_marginHorizontal="10dp"
                    app:cardElevation="21dp">

                    <ImageView
                        android:id="@+id/winner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#D5AD37"
                        android:src="@drawable/jeeadd"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JEE Advanced"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Question papers"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            app:cardBackgroundColor="#A2BED5"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="0dp"
                    android:background="#DDB230"
                    android:layout_marginHorizontal="10dp"
                    app:cardElevation="21dp">

                    <ImageView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#7DB4DF"
                        android:src="@drawable/abc2"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MH_CET"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past year papers and solutions."
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            app:cardBackgroundColor="#A5D6A7"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="0dp"
                    android:background="#DDB230"
                    android:layout_marginHorizontal="10dp"
                    app:cardElevation="21dp">

                    <ImageView
                        android:id="@+id/dna"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#82EC7A"
                        android:src="@drawable/imgdna_2"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEET"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Lastest Question papers available"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

              </androidx.cardview.widget.CardView>




        </LinearLayout>

    </RelativeLayout>

    </androidx.drawerlayout.widget.DrawerLayout>


